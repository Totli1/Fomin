<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400" Background="#FF7D7D7D">
    <Grid>
        <TextBox x:Name="townSearch" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" KeyDown="TextBox_KeyDown"/>
        <Label Name="townName" Content="Label" HorizontalAlignment="Center" Margin="0,112,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Label Name="townTemp" Content="Label" HorizontalAlignment="Center" Margin="0,220,0,0" VerticalAlignment="Top"/>
        <Label Name="townDescription" Content="Label" HorizontalAlignment="Left" Margin="140,352,0,0" VerticalAlignment="Top"/>
        <Image x:Name="townIcon" HorizontalAlignment="Left" Height="100" Margin="225,303,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
